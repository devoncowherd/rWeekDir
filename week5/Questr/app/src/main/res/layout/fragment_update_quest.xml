<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background__5_">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="-48dp"
            tools:layout_editor_absoluteY="72dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:context=".fragments.AddListFragment">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/update_input_container"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/update_header_label"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="24dp"
                                    android:background="@drawable/black_bubble"
                                    android:text="Update Quest"
                                    android:textAlignment="center"
                                    android:textColor="@color/white"
                                    android:textSize="40dp"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/update_title_label"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="24dp"
                                    android:text="Name"
                                    android:textAlignment="center"
                                    android:textColor="@color/white"
                                    android:textSize="20dp"
                                    android:background="@drawable/black_bubble"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/update_header_label" />

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/update_quest_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="24dp"
                                    android:hint="Quest Name"
                                    android:maxLines="4"
                                    android:textAlignment="center"
                                    android:textColor="@color/black"
                                    android:background="@drawable/light_translucent_bubble"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/update_title_label" />

                                <TextView
                                    android:id="@+id/update_description_label"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="24dp"
                                    android:text="Description"
                                    android:textAlignment="center"
                                    android:textColor="@color/white"
                                    android:textSize="20dp"
                                    android:background="@drawable/black_bubble"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/update_quest_name" />

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/update_quest_description"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="24dp"
                                    android:hint="Quest Description"
                                    android:textAlignment="center"
                                    android:textColor="@color/black"
                                    android:background="@drawable/light_translucent_bubble"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/update_description_label" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <LinearLayout
                            android:id="@+id/update_date_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/update_input_container">

                                <DatePicker
                                    android:id="@+id/update_date"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="24dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/light_translucent_bubble"
                                    android:calendarViewShown="false"
                                    android:datePickerMode="spinner"
                                    android:scaleX="1"
                                    android:scaleY="1" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="24dp"
                                    android:text="Date"
                                    android:textAlignment="center"
                                    android:textColor="@color/white"
                                    android:textSize="20dp"
                                    android:background="@drawable/black_bubble" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="24dp"
                                    android:text="Time"
                                    android:textAlignment="center"
                                    android:textColor="@color/white"
                                    android:textSize="20dp"
                                    android:background="@drawable/black_bubble" />

                                <TimePicker
                                    android:id="@+id/update_time"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:calendarViewShown="false"
                                    android:scaleX="1"
                                    android:scaleY="1"
                                    android:layout_margin="24dp"
                                    android:background="@drawable/light_translucent_bubble"
                                    android:timePickerMode="spinner" />
                                />
                        </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/update_quest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/jade"
            android:text="Update"
            android:layout_margin="30dp"
            android:src="@drawable/ic_baseline_add_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/cancel_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/crimson"
            android:text="CANCEL"
            android:layout_margin="30dp"
            android:src="@drawable/ic_baseline_cancel_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/trash_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/dark_grey"
            android:text="CANCEL"
            android:layout_margin="30dp"
            android:src="@drawable/ic_baseline_delete_forever_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>