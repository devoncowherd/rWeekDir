<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/basicBlue"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/hazel_panel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/hazel"
        android:contentDescription="@string/app_name"

        />

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/prompt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/deepBlue"
        android:text="@string/result"
        android:textSize="300sp"
        android:textColor="@color/white"
        />
    <!--
    <ImageView
        android:id=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/result"
        android:maxHeight="100sp"
        android:maxWidth="100sp"
        />
-->
    <TextView
        android:id="@+id/prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/roll_button"
        app:layout_constraintLeft_toLeftOf="@id/hazel_panel"
        app:layout_constraintRight_toRightOf="@id/hazel_panel"
        android:textAlignment="center"
        android:text="@string/prompt"
        android:textSize="50sp"
        android:textColor="@color/deepBlue"
        android:alpha="0.5"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/roll_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="100sp"
        android:text="@string/roll"
        android:textSize="50sp"
        android:textColor="@color/white"
        android:padding="10sp"
        android:background="@color/tan"
        />

</androidx.constraintlayout.widget.ConstraintLayout>